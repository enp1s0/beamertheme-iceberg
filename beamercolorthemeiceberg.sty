% Background
\setbeamercolor{background canvas}{bg=iceberg_gray}

% Text
\setbeamercolor{normal text}{bg=iceberg_black, fg=iceberg_lightgray}
\setbeamercolor{alerted text}{fg=iceberg_red}
\setbeamercolor{itemize item}{fg=iceberg_dark}
\setbeamercolor{enumerate item}{fg=iceberg_dark}

% Headline
\setbeamercolor{headline}{bg=iceberg_black}
\setbeamercolor{title in headline}{fg=iceberg_white, bg=iceberg_black}
\setbeamercolor{author in headline}{fg=iceberg_blue}
\setbeamercolor{institute in headline}{fg=iceberg_purple}

% Title page for slide
\setbeamercolor{title}{fg=iceberg_white}
\setbeamercolor{subtitle}{fg=iceberg_lightgray}
\setbeamercolor{author}{fg=iceberg_blue}
\setbeamercolor{institute}{fg=iceberg_purple}
\setbeamercolor{date}{fg=iceberg_orange}

% Frame
\setbeamercolor{frametitlecolor}{bg=iceberg_black, fg=iceberg_lightgray}

% Block
\setbeamercolor{block title}{bg=iceberg_darkblue, fg=iceberg_white}
\setbeamercolor{block body}{bg=iceberg_lightgray, fg=iceberg_black}
\setbeamercolor{block title alerted}{bg=iceberg_red, fg=iceberg_black}
\setbeamercolor{block title example}{bg=iceberg_green, fg=iceberg_black}
