\ProvidesPackage{beamerthemeiceberg}

\definecolor{iceberg_white}{HTML}{c6c8d1}
\definecolor{iceberg_black}{HTML}{0f1117}
\definecolor{iceberg_dark}{HTML}{161821}
\definecolor{iceberg_green}{HTML}{e2a478}
\definecolor{iceberg_blue}{HTML}{b4be82}
\definecolor{iceberg_red}{HTML}{cc517a}
\definecolor{iceberg_orange}{HTML}{e27878}
\definecolor{iceberg_purple}{HTML}{b4be82}
\definecolor{iceberg_darkblue}{HTML}{1e2132}
\definecolor{iceberg_gray}{HTML}{6b7089}

\usetheme{default}

% Background
\setbeamercolor{background canvas}{bg=iceberg_gray}
\setbeamercolor{block title}{bg=iceberg_darkblue, fg=iceberg_white}
\setbeamercolor{block body}{bg=iceberg_white, fg=iceberg_black}

% Text
\setbeamercolor{normal text}{bg=iceberg_black, fg=iceberg_white}
\setbeamercolor{alerted text}{fg=iceberg_red}

\setbeamertemplate{itemize item}{--}%
\setbeamertemplate{itemize item}{--}%
\setbeamertemplate{itemize subitem}{--}%
\setbeamertemplate{itemize subsubitem}{--}%

\setbeamerfont*{block itemize/enumerate body}{size=\fontsize{\blockbodysize}{\bodylineheightmultiplier\blockbodysize}}
\setbeamerfont*{itemize/enumerate subbody}{parent=itemize/enumerate body}
\setbeamerfont*{itemize/enumerate subsubbody}{parent=itemize/enumerate body}

% Frame
\setbeamertemplate{frametitle}
{
	\nointerlineskip
	\setbeamercolor{frametitlecolor}{bg=iceberg_black, fg=iceberg_white}
	\begin{beamercolorbox}[sep=0.3cm,ht=1.6em,wd=\paperwidth]{frametitlecolor}
		\strut\insertframetitle\strut
		\hfill
	\end{beamercolorbox}
}

% Header
\setbeamercolor{headline}{bg=iceberg_black}
\setbeamertemplate{headline}{
	\leavevmode
	\begin{beamercolorbox}[wd=\paperwidth]{headline}
		\begin{columns}[T]
			\begin{column}{.02\paperwidth}
			\end{column}
			\begin{column}{.10\paperwidth}
				\vskip8ex
			\end{column}
			\begin{column}{.76\paperwidth}
				\vskip8ex
				\begin{center}
					\usebeamercolor{title in headline}{\color{fg}\textbf{\veryHuge{\inserttitle}}\\[1ex]}
					\usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
					\usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}
				\end{center}
			\end{column}
			\begin{column}{.10\paperwidth}
				\vskip10ex
			\end{column}
			\begin{column}{.02\paperwidth}
			\end{column}
		\end{columns}
		\vskip2ex
	\end{beamercolorbox}
}
