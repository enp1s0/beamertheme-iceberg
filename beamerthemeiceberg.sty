\ProvidesPackage{beamerthemeiceberg}

\usetheme{default}
\beamertemplatenavigationsymbolsempty

\setbeamertemplate{itemize subitem}{fg=iceberg_dark}
\setbeamertemplate{itemize subsubitem}{fg=iceberg_dark}

\setbeamertemplate{enumerate subitem}{fg=iceberg_dark}
\setbeamertemplate{enumerate subsubitem}{fg=iceberg_dark}

% Frame
\setbeamertemplate{frametitle}
{
	\nointerlineskip
	\begin{beamercolorbox}[sep=0.04cm,ht=1.6em,wd=\paperwidth]{frametitlecolor}
		\strut\insertframetitle\strut
		\hfill
	\end{beamercolorbox}
}

% Header
\setbeamertemplate{headline}{
	\leavevmode
}

% Title page
\setbeamertemplate{title page}{
	\vskip2ex
	\usebeamerfont{title}
	\usebeamercolor[fg]{title}
	{\Huge\inserttitle}
	\ifx\insertsubtitle\@empty
	\else
	\vskip2ex
	\usebeamerfont{subtitle}
	\usebeamercolor[fg]{subtitle}
	\insertsubtitle
	\fi
	\ifx\insertauthor\@empty
	\else
	\vskip10ex
	\usebeamerfont{author}
	\usebeamercolor[fg]{author}
	\insertauthor
	\fi
	\ifx\insertinstitute\@empty
	\else
	\vskip2ex
	\usebeamerfont{institute}
	\usebeamercolor[fg]{institute}
	\insertinstitute%
	\fi
	\ifx\insertdate\@empty
	\else
	\vskip2ex
	\usebeamerfont{date}
	\usebeamercolor[fg]{date}
	\insertdate%
	\fi
	\vfill
}

\setbeamertemplate{footline}[frame number]
\setbeamertemplate{navigation symbols}{}
