\setbeamertemplate{itemize subitem}{fg=iceberg_dark}
\setbeamertemplate{itemize subsubitem}{fg=iceberg_dark}

\setbeamertemplate{enumerate subitem}{fg=iceberg_dark}
\setbeamertemplate{enumerate subsubitem}{fg=iceberg_dark}

% Frame
\setbeamertemplate{frametitle}
{
	\nointerlineskip
	\setbeamercolor{frametitlecolor}{bg=iceberg_black, fg=iceberg_lightgray}
	\begin{beamercolorbox}[sep=0.3cm,ht=1.6em,wd=\paperwidth]{frametitlecolor}
		\strut\insertframetitle\strut
		\hfill
	\end{beamercolorbox}
}

